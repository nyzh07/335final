<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Clear</title>
        <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    </head>

    <body>
        <%- include('navbar') %>
        <div class="plotContainer">
        <h1>Clear Search History</h1>
        <form action="/clearResults" method="post" onsubmit="return confirmation()">
            <input type="submit" value="Clear Search">
        </form>
        </div>  
        <script>
            function confirmation() {
                return window.confirm("Are you sure you want to remove all recently searched shows and movies?");
            }
        </script>
    </body>
</html>